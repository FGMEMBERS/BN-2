<?xml version="1.0"?>

<PropertyList>
	
	<path>pedestal.ac</path>
	
	<animation>
		<type>rotate</type>
		<object-name>throttle-lever.L</object-name>
		<object-name>throttle-knob.L</object-name>
		<property>controls/engines/engine[0]/throttle</property>
		<factor>60</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>throttle-lever.R</object-name>
		<object-name>throttle-knob.R</object-name>
		<property>controls/engines/engine[1]/throttle</property>
		<factor>60</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>rpm-lever.L</object-name>
		<object-name>rpm-knob.L</object-name>
		<property>controls/engines/engine[0]/propeller-pitch</property>
		<factor>60</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>rpm-lever.R</object-name>
		<object-name>rpm-knob.R</object-name>
		<property>controls/engines/engine[1]/propeller-pitch</property>
		<factor>60</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>mixture-lever.L</object-name>
		<object-name>mixture-knob.L</object-name>
		<property>controls/engines/engine[0]/mixture</property>
		<factor>60</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>mixture-lever.R</object-name>
		<object-name>mixture-knob.R</object-name>
		<property>controls/engines/engine[1]/mixture</property>
		<factor>60</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>hotspot-up</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>controls.flapsDown(-1)</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>hotspot-down</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>controls.flapsDown(1)</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>select</type>
		<object-name>flap-lever</object-name>
		<condition>
			<or>
				<and>
				<equals>
					<property>sim/flaps/current-setting</property>
					<value>0</value>
				</equals>
				<equals>
					<property>surface-positions/flap-pos-norm</property>
					<value>0.0</value>
				</equals>
				</and>
				<and>
					<equals>
						<property>sim/flaps/current-setting</property>
						<value>1</value>
					</equals>
					<equals>
						<property>surface-positions/flap-pos-norm</property>
						<value>0.45</value>
					</equals>
				</and>
				<and>
					<equals>
						<property>sim/flaps/current-setting</property>
						<value>2</value>
					</equals>
					<equals>
						<property>surface-positions/flap-pos-norm</property>
						<value>1.0</value>
					</equals>
				</and>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>flap-lever-up</object-name>
		<condition>
			<or>
				<and>
					<equals>
						<property>sim/flaps/current-setting</property>
						<value>0</value>
					</equals>
					<greater-than>
						<property>surface-positions/flap-pos-norm</property>
						<value>0.0</value>
					</greater-than>
				</and>
				<and>
					<equals>
						<property>sim/flaps/current-setting</property>
						<value>1</value>
					</equals>
					<greater-than>
						<property>surface-positions/flap-pos-norm</property>
						<value>0.45</value>
					</greater-than>
				</and>
			</or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>flap-lever-down</object-name>
		<condition>
			<or>
				<and>
					<equals>
						<property>sim/flaps/current-setting</property>
						<value>1</value>
					</equals>
					<less-than>
						<property>surface-positions/flap-pos-norm</property>
						<value>0.45</value>
					</less-than>
				</and>
				<and>
					<equals>
						<property>sim/flaps/current-setting</property>
						<value>2</value>
					</equals>
					<less-than>
						<property>surface-positions/flap-pos-norm</property>
						<value>1.0</value>
					</less-than>
				</and>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>elev-trim-ind</object-name>
		<property>controls/flight/elevator-trim</property>
		<factor>60</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>elev-trim-wheel</object-name>
		<property>controls/flight/elevator-trim</property>
		<factor>6000</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
</PropertyList>
