<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>shadow.ac</path>
  
  <offsets>
	  <x-m>0</x-m>
	  <y-m>0</y-m>
	  <z-m>0.05</z-m>
  </offsets>
  
  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadow</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadow</object-name>
  </animation>

  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>shadow</object-name>
    <property>/orientation/pitch-deg</property>
    <factor>-1.0</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
	  <type>scale</type>
	  <object-name>shadow</object-name>
	  <property>/orientation/shadow-scale-pitch</property>
	  <x-factor>1</x-factor>
	  <y-factor>0</y-factor>
	  <z-factor>0</z-factor>
	  
	  <x-offset>0</x-offset>
	  <y-offset>1</y-offset>
	  <z-offset>1</z-offset>
	  
	  <center>
		  <x-m>0</x-m>
		  <y-m>0</y-m>
		  <z-m>0</z-m>
	  </center>
	  <axis>
		  <x>1</x>
		  <y>0</y>
		  <z>0</z>
	  </axis>
  </animation>
  
  <!-- roll -->
  <animation>
	  <type>rotate</type>
	  <object-name>shadow</object-name>
	  <property>/orientation/roll-deg</property>
	  <factor>1.0</factor>
	  <center>
		  <x-m>0</x-m>
		  <y-m>0</y-m>
		  <z-m>0</z-m>
	  </center>
	  <axis>
		  <x>1</x>
		  <y>0</y>
		  <z>0</z>
	  </axis>
  </animation>
  
  <animation>
    <type>scale</type>
    <object-name>shadow</object-name>
	<property>/orientation/shadow-scale-roll-horiz</property>
    <x-factor>0</x-factor>
	<y-factor>1</y-factor>
	<z-factor>0</z-factor>
	
	<x-offset>1</x-offset>
	<y-offset>0</y-offset>
	<z-offset>1</z-offset>

	<center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>


  <!-- Translate to ground level -->


  <animation>
   <type>translate</type>
   <object-name>shadow</object-name>
   <property>/position/gear-agl-ft</property>
   <factor>-0.3048</factor>
   <center>
     <x-m>0</x-m>
     <y-m>0</y-m>
     <z-m>0</z-m>
   </center>
   <axis>
     <x>0</x>
     <y>0</y>
     <z>1</z>
   </axis>
 </animation>

 
</PropertyList>

