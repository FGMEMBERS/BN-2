<?xml version="1.0"?>

<PropertyList>

 <path>toggle-switch.ac</path>
 
 <animation>
  <type>rotate</type>
  <object-name>switch</object-name>
  <property>controls/lighting/beacon</property>
  <factor>40</factor>
	<axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
	 <type>pick</type>
	 <object-name>switch</object-name>
	 <visible>true</visible>
	 <action>
		 <button>0</button>
		 <repeatable>false</repeatable>
		 <binding>
			 <command>property-toggle</command>
			 <property>controls/lighting/beacon</property>
		 </binding>
		 <binding>
			 <command>property-toggle</command>
			 <property>sim/sound/switch</property>
		 </binding>
	 </action>
    </animation>
</PropertyList>


