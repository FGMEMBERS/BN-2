<?xml version="1.0"?>

<PropertyList>

	<path>gauge-50mm.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<texture>fuel-qty.png</texture>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>needle</object-name>
		<object-name>face</object-name>
		<emission>
			<red>0.5</red>
			<green>0.2</green>
			<blue>0.0</blue>
			<factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<texture>fuel-pressure.png</texture>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>/consumables/fuel/tank[1]/level-gal_us</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>-111.5</dep></entry>
			<entry><ind>10.0</ind><dep>-66.5</dep></entry>
			<entry><ind>60.0</ind><dep>90.0</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>

	
</PropertyList>
