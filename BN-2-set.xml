    <gear>
        <gear n="0">
            <position-norm>1</position-norm>
        </gear>
        <gear n="1">
            <position-norm>1</position-norm>
        </gear>
        <gear n="2">
            <position-norm>1</position-norm>
        </gear>
    </gear>
-->
    
        <engines>
            <engine n="0">
                <running>1</running>
            </engine>
            <engine n="1">
                <running>1</running>
            </engine>
        </engines>

